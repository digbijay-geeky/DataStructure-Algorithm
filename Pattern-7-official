import java.util.*;

public class Main {

  public static void main(String[] args) {
    Scanner scn = new Scanner(System.in);

    // write ur code here
    int n=scn.nextInt();
    int space=0;
    int star=1;
    for(int row=1;row<=n;row++){
        for(int i=0;i<space;i++){
            System.out.print("\t");
        }
        for(int i=1;i<=star;i++){
            System.out.print("*\t");
        }
        System.out.println();
     space++;   
    }

  }
}
